      source ci/azurepipelines/install_conda_build_test_deps "/usr/share/miniconda/bin/python"

      conda install -q pytest pytest-azurepipelines pytest-cov pytest-forked pytest-xdist anaconda-client  \
                       git requests filelock contextlib2 jinja2 patchelf  \
                       ripgrep pyflakes beautifulsoup4 chardet pycrypto glob2 psutil pytz tqdm  \
                       conda-package-handling py-lief python-libarchive-c perl conda-forge::shellcheck  \
                       pip nomkl numpy mock pytest-mock pkginfo
      pushd .. && git clone https://github.com/conda/conda_build_test_recipe && popd
      pip install --no-deps .
